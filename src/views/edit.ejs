<%- include("templates/head") %>
<body>
    <%- include("templates/navbar") %>
    <div class="container mt-5">
        <h1 class="text-center">Editar Persona</h1>
        <form action="/editar/<%= item.id %>" method="post" class="mt-3">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="form-group">
                        <label for="nombre" class="text-dark">Nombre:</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="<%= item.nombre %>" required>
                    </div>
                    <div class="form-group">
                        <label for="email" class="text-dark">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= item.email %>" required>
                    </div>
                    <div class="form-group">
                        <label for="oficina" class="text-dark">Oficina:</label>
                        <select class="form-control" id="oficina" name="oficina">
                            <% oficinas.forEach((oficina) => { %>
                                <option value="<%= oficina.id %>" <%= item.oficina_id === oficina.id ? 'selected' : '' %>><%= oficina.denominacion %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-dark bi bi-patch-check-fill mt-3"></button>
                </div>
            </div>
        </form>
    </div>
    <%- include("templates/footer") %>
</body>
</html>
