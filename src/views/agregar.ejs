<%- include("templates/head") %>
<body>
    <%- include("templates/navbar") %>
    <div class="container mt-5">
        <h1 class="text-center">Agregar Persona</h1>
        <form action="/agregar" method="post" class="mt-3">
            <div class="row justify-content-center">
                <!-- responsividad -->
                <div class="col-md-8 col-lg-6">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="oficina">Oficina:</label>
                        <select class="form-control" id="oficina" name="oficina">
                            <% oficinas.forEach(function(oficina) { %>
                                <option value="<%= oficina.id %>"><%= oficina.denominacion %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-dark bi bi-patch-check-fill mt-3"></button>
                </div>
            </div>
        </form>
    </div>
    <%- include("templates/footer") %>
</body>
</html>
